{
  "name": "Order Service",
  "version": "1.0.0",
  "description": "Mernspace Order Service",
  "main": "server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/server.ts",
    "build": "tsc",
    "test": "jest --no-cache --coverage --all --runInBand",
    "test:watch": "jest --watch --runInBand",
    "format:check": "npx prettier . --check",
    "format:fix": "npx prettier . --write",
    "lint:check": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format:fix",
      "npm run lint:fix"
    ]
  },
  "author": "techmanthansharma@gmail.com <Manthan Sharma>",
  "license": "ISC",
  "dependencies": {
    "config": "^4.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-jwt": "^8.5.1",
    "express-validator": "^7.2.1",
    "http-errors": "^2.0.0",
    "js-yaml": "^4.1.0",
    "jwks-rsa": "^3.2.0",
    "mongoose": "^8.19.1",
    "mongoose-aggregate-paginate-v2": "^1.1.4",
    "uuid": "^13.0.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/config": "^3.3.5",
    "@types/cookie-parser": "^1.4.9",
